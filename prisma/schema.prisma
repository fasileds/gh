// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model AuthToken {
  id String @id @default(uuid()) @unique
  refreshToken String
  createdAt   DateTime @default(now())
}
model User {
  id        String   @id @default(uuid()) @unique
  email     String   @unique
  latitude  Float    @default(0.0)   
  longitude Float    @default(0.0)  
  customerId String @default(" ") 
  menus      Menu[] 
}

model Restorant {
  id              String   @id @default(uuid()) @unique
  restorantName   String
  description     String
  streetAddress   String
  city            String
  state           String
  zipCode         String
  menus           Menu[] // One-to-many relationship with Menu
}

model Menu {
  id          String   @id @default(uuid()) @unique
  videoUrl    String
  description String
  userId      String
  price       Float
  user        User     @relation(fields: [userId], references: [id]) 
  orders      Order[]
  restorantId String   @default("17e4d7f2-2ae9-4e20-83ef-1a8e30786076") // Set the default value
  restorant   Restorant @relation(fields: [restorantId], references: [id])
}


model Order {
  id          String   @id @default(uuid()) @unique
  location    String
  menuId      String
  menu        Menu     @relation(fields: [menuId], references: [id]) 
  createdAt   DateTime @default(now())
}

model CampaignMetrics {
  id          String   @id @default(uuid()) @unique
  campaignId  String
  impressions Int     
  clicks      Int     
  cost        Float   
  conversions Int     
  createdAt   DateTime @default(now()) 
  updatedAt   DateTime @updatedAt      
}
